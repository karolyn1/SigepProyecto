
@{
    ViewBag.Title = "Lista de Vacantes - Coordinador";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="vacantes-wrapper">
    <h2 class="vacantes-titulo">Vacantes Publicadas</h2>

    <a href="@Url.Action("CrearVacante", "Vacante")" class="btn-cta btn-nuevo" style="margin-bottom: 25px;">+ Publicar Nueva Vacante</a>

    <div class="table-container">
        <table id="miTabla" class="display responsive" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre del puesto</th>
                    <th>Empresa</th>
                    <th>Descripción</th>
                    <th>Requisitos</th>
                    <th>Ubicación</th>
                    <th>Modalidad</th>
                    <th>Fecha publicación</th>
                    <th>Fecha límite</th>
                    <th>Área profesional</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Desarrollador Full Stack</td>
                    <td>TechSolutions S.A.</td>
                    <td>Desarrollo de aplicaciones web con .NET y JavaScript.</td>
                    <td>C#, SQL Server, Angular</td>
                    <td>Remoto</td>
                    <td>Tiempo completo</td>
                    <td>15/06/2025</td>
                    <td>30/06/2025</td>
                    <td>Ingeniería</td>
                    <td class="acciones">
                        <a href="@Url.Action("EditarVacante", "Vacante", new { id = 1 })" class="btn-editar">Editar</a>
                        <a href="@Url.Action("ConfirmarDesactivacion", "Vacante", new { id = 1 })" class="btn-eliminar">Desactivar</a>
                    </td>
                </tr>
                <!-- Más filas aquí -->
            </tbody>
        </table>
    </div>
</section>

@section Scripts {
    <script src="~/Scripts/validaciones.js"></script>
}