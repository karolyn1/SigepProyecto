@{
    ViewBag.Title = "Crear Sección";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="vacantes-wrapper">
    <h2 class="vacantes-titulo titulo-principal">Registrar Nueva Sección</h2>

    <form class="formulario-vacante" method="post" action="@Url.Action("CrearSeccion", "AdministracionGeneral")">
        <label for="nombreSeccion">Nombre de la sección <span style="color:#E04F4F">*</span></label>
        <input type="text" id="nombreSeccion" name="nombreSeccion" placeholder="Ejemplo: Sección A" required />

        <label for="descripcionSeccion">Descripción <span style="color:#E04F4F">*</span></label>
        <textarea id="descripcionSeccion" name="descripcionSeccion" placeholder="Breve descripción de la sección" required></textarea>

        @* Botón de guardar y redirigir a la lista de secciones *@
        <a href="@Url.Action("GestionAdministracion", "AdministracionGeneral", new { tab = "secciones" })" class="btn-guardar">Guardar Sección</a>
    </form>
</section>

<link href="~/Content/estilos/estilos.css" rel="stylesheet" />

