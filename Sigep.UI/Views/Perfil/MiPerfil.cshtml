<script>
    // Botón Información Personal con validación de campos vacíos
    document.getElementById("btnActualizarInfo").addEventListener("click", function () {
        const campos = document.querySelectorAll('#info-personal input');
        let incompletos = false;

        campos.forEach(input => {
            if (input.value.trim() === "") {
                incompletos = true;
            }
        });

        if (incompletos) {
            Swal.fire({
                icon: 'warning',
                title: 'Campos incompletos',
                text: 'Por favor complete todos los campos obligatorios',
                confirmButtonColor: '#8CA653'
            });
        } else {
            Swal.fire({
                icon: 'success',
                title: 'Información actualizada correctamente',
                showConfirmButton: false,
                timer: 2000
            });
        }
    });

    // Función para mostrar Swal éxito para otros botones sin validación
    function mostrarSuccessMensaje() {
        Swal.fire({
            icon: 'success',
            title: 'Información guardada correctamente',
            showConfirmButton: false,
            timer: 2000
        });
    }

    // Agregar eventos a los otros botones si existen
    ["btnActualizarAcademica", "btnActualizarEncargado1", "btnActualizarEncargado2", "btnActualizarLaboral", "btnActualizarMedica", "btnSubirDoc"].forEach(id => {
        const btn = document.getElementById(id);
        if (btn) {
            btn.addEventListener("click", mostrarSuccessMensaje);
        }
    });
</script>