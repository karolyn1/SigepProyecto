<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - SIGEP</title>

    <!-- CSS Bundles -->
    @Styles.Render("~/Content/css")

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- CSS personalizado -->
    <link href="~/Content/estilos/estilos.css" rel="stylesheet" />
    <link href="~/Content/DataTable/dataTables.dataTables.css" rel="stylesheet" />

    <!-- Modernizr -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- NAV -->
    <nav class="navbar navbar-expand-sm navbar-custom">
        <div class="container-fluid">
            @Html.ActionLink("SIGEP - CTP José Figueres Ferrer", "Index", "Home", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <!-- Layout principal con sidebar y contenido -->
    <div class="main-layout">
        <!-- Sidebar -->
        <nav class="sidebar" aria-label="Menú Principal">
            <h5>Menú Principal</h5>

            <button class="menu-btn" type="button" aria-expanded="false" aria-controls="estudianteSubmenu" data-target="#estudianteSubmenu">
                Estudiante
                <span class="arrow">&#9654;</span>
            </button>
            <div class="submenu" id="estudianteSubmenu" role="region" aria-labelledby="estudianteSubmenu">
                <a href="/Estudiante/CrearEstudiante">Crear</a>
                <a href="/Estudiante/ListarEstudiante">Listar</a>
                <a href="/Estudiante/EditarEstudiante">Editar</a>
                <a href="/Estudiante/EliminarEstudiante">Eliminar</a>
            </div>

            <button class="menu-btn" type="button" aria-expanded="false" aria-controls="practicaSubmenu" data-target="#practicaSubmenu">
                Práctica
                <span class="arrow">&#9654;</span>
            </button>
            <div class="submenu" id="practicaSubmenu" role="region" aria-labelledby="practicaSubmenu">
                <a href="/Practica/Crear">Registrar</a>
                <a href="/Practica/Listar">Listar</a>
                <a href="/Practica/Seguimiento">Seguimiento</a>
            </div>

            <button class="menu-btn" type="button" aria-expanded="false" aria-controls="evaluacionSubmenu" data-target="#evaluacionSubmenu">
                Evaluación
                <span class="arrow">&#9654;</span>
            </button>
            <div class="submenu" id="evaluacionSubmenu" role="region" aria-labelledby="evaluacionSubmenu">
                <a href="/Evaluacion/Listar">Evaluaciones</a>
            </div>

            <button class="menu-btn" type="button" aria-expanded="false" aria-controls="citaSubmenu" data-target="#citaSubmenu">
                Citas
                <span class="arrow">&#9654;</span>
            </button>
            <div class="submenu" id="citaSubmenu" role="region" aria-labelledby="citaSubmenu">
                <a href="/Cita/Crear">Solicitar</a>
            </div>

            <button class="menu-btn" type="button" aria-expanded="false" aria-controls="empleoSubmenu" data-target="#empleoSubmenu">
                Bolsa de Empleo
                <span class="arrow">&#9654;</span>
            </button>
            <div class="submenu" id="empleoSubmenu" role="region" aria-labelledby="empleoSubmenu">
                <a href="/BolsaEmpleo/Listar">Vacantes</a>
            </div>
        </nav>

        <!-- Contenido dinámico de cada vista -->
        <main class="content" role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; @DateTime.Now.Year - SIGEP | CTP José Figueres Ferrer</p>
        <p>Desarrollado por el equipo de práctica profesional</p>
    </footer>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/DataTable/dataTables.js"></script>
    <script src="~/Scripts/validaciones.js"></script>

    <!-- Script para desplegar submenús -->
    <script>
        document.querySelectorAll('.menu-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const targetSelector = btn.getAttribute('data-target');
                const submenu = document.querySelector(targetSelector);
                const isOpen = btn.classList.contains('active');

                if (isOpen) {
                    btn.classList.remove('active');
                    btn.setAttribute('aria-expanded', 'false');
                    submenu.style.display = 'none';
                } else {
                    btn.classList.add('active');
                    btn.setAttribute('aria-expanded', 'true');
                    submenu.style.display = 'block';
                }
            });
        });
    </script>
</body>
</html>