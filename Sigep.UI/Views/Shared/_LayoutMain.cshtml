<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SIGEP</title>
    <!-- Fuente Rubik desde Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="~/Content/DataTable/dataTables.dataTables.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/estilos/estilos.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>

<body>
    @{
        var rol = Session["rol"] != null ? Convert.ToInt32(Session["rol"]) : 0;
    }

    <div id="main-wrapper">
        <header class="topbar">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                <div class="navbar-header">
                    <a class="nav-toggler waves-effect waves-light d-block d-md-none" href="javascript:void(0)">
                        <i class="ti-menu ti-close"></i>
                    </a>
                    <div class="navbar-brand">
                        <a href="@Url.Action("Index", "Home")" class="logo">
                            <b class="logo-icon">
                                <img src="~/Images/logo-icon.png" alt="homepage" class="dark-logo" />
                                <img src="~/Images/logo-light-icon.png" alt="homepage" class="light-logo" />
                            </b>
                            <span class="logo-text text-white">
                                SIGEP
                            </span>
                        </a>
                        <a class="sidebartoggler d-none d-md-block" href="javascript:void(0)" data-sidebartype="mini-sidebar">
                            <i class="mdi mdi-toggle-switch mdi-toggle-switch-off font-20"></i>
                        </a>
                    </div>
                    <a class="topbartoggler d-block d-md-none waves-effect waves-light" href="javascript:void(0)" data-toggle="collapse" data-target="#navbarSupportedContent"
                       aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="ti-more"></i>
                    </a>
                </div>
                <div class="navbar-collapse collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav float-left mr-auto">
                    </ul>
                    <ul class="navbar-nav float-right">

                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle waves-effect waves-dark pro-pic" href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Hola, @Session["nombre"]
                                <span class="m-l-5 font-medium d-none d-sm-inline-block">  <i class="mdi mdi-chevron-down"></i></span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right user-dd animated flipInY">
                                <span class="with-arrow">
                                    <span class="bg-primary"></span>
                                </span>

                                <div class="profile-dis scrollable">
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("ConsultarPerfilUsuario","Usuario")">
                                        <i class="ti-settings m-r-5 m-l-5"></i> Perfil
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("CambiarContrasenna","Usuario")">
                                        <i class="ti-lock m-r-5 m-l-5"></i> Seguridad
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("CerrarSesion","Home")">
                                        <i class="fa fa-sign-out-alt m-r-5 m-l-5"></i> Salir
                                    </a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="left-sidebar">
            <div class="scroll-sidebar">
                <nav class="sidebar-nav">
                    <ul id="sidebarnav">
                        <li class="nav-small-cap">
                            <i class="mdi mdi-dots-horizontal"></i>
                            <span class="hide-menu">PRÁCTICAS</span>
                        </li>
                        @if (rol == 1)
                        {
                            <li class="sidebar-item">
                                <a class="sidebar-link has-arrow waves-effect waves-dark" href="javascript:void(0)" aria-expanded="false">
                                    <i class="ti-briefcase"></i>
                                    <span class="hide-menu">Prácticas Profesionales </span>
                                </a>
                                <ul aria-expanded="false" class="collapse  first-level">
                                    <li class="sidebar-item">
                                        <a href="#" class="sidebar-link">
                                            <i class="fas fa-briefcase "></i>
                                            <span class="hide-menu"> Gestión de Vacantes</span>
                                        </a>
                                    </li>
                                    <li class="sidebar-item">
                                        <a href="@Url.Action("ListarEstudiante", "Estudiante")" class="sidebar-link">
                                            <i class="fas fa-user"></i>
                                            <span class="hide-menu"> Gestión de Prácticas </span>
                                        </a>
                                    </li>
                                    <li class="sidebar-item">
                                        <a href="index2.html" class="sidebar-link">
                                            <i class="fas fa-graduation-cap"></i>
                                            <span class="hide-menu"> Evaluaciones </span>
                                        </a>
                                    </li>
                                </ul>
                            </li>



                            <li class="sidebar-item"> <a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("ListarEstudiante", "Estudiante")" aria-expanded="false"><i class="ti-user"></i> <span class="hide-menu">Estudiantes</span></a></li>
                            <li class="sidebar-item"> <a class="sidebar-link waves-effect waves-dark sidebar-link" href="index.html" aria-expanded="false"><i class="fas fa-building "></i> <span class="hide-menu">Empresas</span></a></li>
                        }

                       
                            <li class="sidebar-item">
                                <a class="sidebar-link has-arrow waves-effect waves-dark" href="javascript:void(0)" aria-expanded="false">
                                    <i class="ti-user"></i>
                                    <span class="hide-menu">Estudiantes</span>
                                </a>
                                <ul aria-expanded="false" class="collapse first-level">
                                    <li class="sidebar-item">
                                        <a class="sidebar-link has-arrow" href="javascript:void(0)" aria-expanded="false">
                                            <i class="fas fa-folder-open"></i>
                                            <span class="hide-menu">Mis Procesos</span>
                                        </a>
                                        <ul aria-expanded="false" class="collapse second-level">
                                            <li class="sidebar-item">
                                                <a href="@Url.Action("MisPostulaciones", "Estudiante")" class="sidebar-link">
                                                    <i class="fas fa-briefcase"></i>
                                                    <span class="hide-menu">Mis Postulaciones</span>
                                                </a>
                                            </li>
                                            <li class="sidebar-item">
                                                <a href="@Url.Action("MiPractica", "Estudiante")" class="sidebar-link">
                                                    <i class="fas fa-briefcase"></i>
                                                    <span class="hide-menu">Mi Práctica</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li class="sidebar-item">
                                        <a href="@Url.Action("PerfilEstudiante", "Estudiante")" class="sidebar-link">
                                            <i class="fas fa-user-circle"></i>
                                            <span class="hide-menu">Mi Perfil</span>
                                        </a>
                                    </li>
                                    <li class="sidebar-item">
                                        <a href="@Url.Action("ComunicadosEstudiante", "Estudiante")" class="sidebar-link">
                                            <i class="ti-announcement"></i>
                                            <span class="hide-menu">Comunicados</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        


                        <li class="nav-small-cap">
                            <i class="mdi mdi-dots-horizontal"></i>
                            <span class="hide-menu">COMUNICACIONES</span>
                        </li>
                        <ul id="sidebarnav">
                            <li class="sidebar-item"> <a class="sidebar-link waves-effect waves-dark sidebar-link" href="index.html" aria-expanded="false"><i class="ti-announcement"></i><span class="hide-menu">Comunicados</span></a></li>
                        </ul>

                        <li class="nav-small-cap">
                            <i class="mdi mdi-dots-horizontal"></i>
                            <span class="hide-menu">EGRESADOS</span>
                        </li>
                        <ul id="sidebarnav">
                            <li class="sidebar-item"> <a class="sidebar-link waves-effect waves-dark sidebar-link" href="index.html" aria-expanded="false"><i class="ti-id-badge"></i> <span class="hide-menu">Historial</span></a></li>
                        </ul>
                        @if (rol == 3)
                        {
                            <ul id="sidebarnav">
                                <li class="sidebar-item"> <a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("ListaVacantesEgresado", "Vacante")" aria-expanded="false"><i class="ti-id-badge"></i> <span class="hide-menu">Bolsa de Empleo</span></a></li>
                            </ul>
                        }
                        else
                        {
                            <ul id="sidebarnav">
                                <li class="sidebar-item"> <a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("ListaVacanteCoordinador", "Vacante")" aria-expanded="false"><i class="ti-id-badge"></i> <span class="hide-menu">Bolsa de Empleo</span></a></li>
                            </ul>
                        }


                        <li class="sidebar-item">
                            <a href="@Url.Action("ComunicadosImportantes", "Comunicado")" class="sidebar-link">
                                <i class="mdi mdi-bullhorn"></i>
                                <span class="hide-menu">Comunicados Importantes</span>
                            </a>
                        </li>

                        <li class="nav-small-cap">
                            <i class="mdi mdi-dots-horizontal"></i>
                            <span class="hide-menu">ADMINISTRACIÓN</span>
                        </li>
                        <ul id="sidebarnav">
                            <li class="sidebar-item"> <a class="sidebar-link waves-effect waves-dark sidebar-link" href="index.html" aria-expanded="false"><i class="ti-id-badge"></i> <span class="hide-menu">Administración General</span></a></
                        </ul>
                        <ul id="sidebarnav">
                            <li class="sidebar-item"> <a class="sidebar-link waves-effect waves-dark sidebar-link" href="index.html" aria-expanded="false"><i class="ti-id-badge"></i> <span class="hide-menu">Mi Perfil</span></a></li>
                        </ul>

</nav>
            </div>
        </aside>
        <div class="page-wrapper">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        @RenderBody()
                    </div>
                </div>

            </div>
            <footer class="footer text-center">
                SIGEP | Todos los derechos reservados.
            </footer>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.0.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    <script src="~/Scripts/app.min.js"></script>
    <script src="~/Scripts/app.init.js"></script>
    <script src="~/Scripts/app-style-switcher.js"></script>
    <script src="~/Scripts/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Scripts/sparkline.js"></script>
    <script src="~/Scripts/waves.js"></script>
    <script src="~/Scripts/sidebarmenu.js"></script>
    <script src="~/Scripts/custom.min.js"></script>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>