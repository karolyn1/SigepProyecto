<!DOCTYPE html>
<html dir="ltr" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SIGEP</title>

    <!-- Google Fonts: Rubik -->
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap, Icons y DataTables -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/themify-icons@0.1.2/css/themify-icons.css">

    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.dataTables.min.css" rel="stylesheet" />

    <!-- Estilos locales -->
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/estilos/estilos.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>

<body>
    @{
        var rol = Session["rol"] != null ? Convert.ToInt32(Session["rol"]) : 0;
    }

    <div id="main-wrapper">
        <!-- Topbar -->
        <header class="topbar">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                <div class="navbar-header">
                    <a class="nav-toggler waves-effect waves-light d-block d-md-none" href="javascript:void(0)">
                        <i class="ti-menu ti-close"></i>
                    </a>
                    <div class="navbar-brand">
                        <a href="@Url.Action("Index", "Home")" class="logo">
                            <span class="logo-icon">
                                <img src="@Url.Content("~/Images/logoSIGEP.png")" alt="homepage" class="dark-logo" width="25" />
                                <img src="@Url.Content("~/Images/logoSIGEP.png")" alt="homepage" class="light-logo" width="25" />
                            </span>

                            <span class="logo-text text-white">SIGEP</span>
                        </a>
                        <a class="sidebartoggler d-none d-md-block" href="javascript:void(0)" data-sidebartype="mini-sidebar">
                            <i class="mdi mdi-toggle-switch mdi-toggle-switch-off font-20"></i>
                        </a>
                    </div>
                    <a class="topbartoggler d-block d-md-none waves-effect waves-light" href="javascript:void(0)"
                       data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                       aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="ti-more"></i>
                    </a>
                </div>
                <div class="navbar-collapse collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav float-start me-auto"></ul>
                    <ul class="navbar-nav float-end">
                        <span class="me-3" style="color: #2d594d">
                            <b>Hola, @Session["Nombre"]</b>
                        </span>
                    </ul>
                </div>
            </nav>
        </header>

        <!-- Sidebar -->
        <aside class="left-sidebar">
            <div class="scroll-sidebar">
                <nav class="sidebar-nav">
                    <ul id="sidebarnav">

                        <!-- PRÁCTICAS -->
                        @if (rol == 1 || rol == 4 || rol == 2)
                        {
                            <li class="nav-small-cap">
                                <i class="mdi mdi-dots-horizontal"></i>
                                <span class="hide-menu">PRÁCTICAS</span>
                            </li>
                        }
                        
                        @if (rol == 1 || rol == 4)
                        {
                            <li class="sidebar-item">
                                <a class="sidebar-link has-arrow waves-effect waves-dark" href="javascript:void(0)" aria-expanded="false">
                                    <i class="ti-briefcase"></i>
                                    <span class="hide-menu">Prácticas Profesionales</span>
                                </a>
                                <ul aria-expanded="false" class="collapse first-level">
                                    @if (rol == 1)
                                    {
                                        <li class="sidebar-item">
                                            <a href="@Url.Action("VacantesEstudiantes", "Practicas")" class="sidebar-link">
                                                <i class="fas fa-briefcase"></i>
                                                <span class="hide-menu">Gestión de Vacantes</span>
                                            </a>
                                        </li>
                                    }
                                    @if (rol == 4)
                                    {
                                        <li class="sidebar-item">
                                            <a href="@Url.Action("VistaVacantesProfesor", "Practicas")" class="sidebar-link">
                                                <i class="fas fa-briefcase"></i>
                                                <span class="hide-menu">Vacantes Disponibles</span>
                                            </a>
                                        </li>
                                    }
                                    <li class="sidebar-item">
                                        <a href="@Url.Action("PracticasCoordinador", "Practicas")" class="sidebar-link">
                                            <i class="fas fa-user"></i>
                                            <span class="hide-menu">Gestión de Prácticas</span>
                                        </a>
                                    </li>
                                    <li class="sidebar-item">
                                        <a href="@Url.Action("ListarEstudianteConPractica", "Evaluacion")" class="sidebar-link">
                                            <i class="fas fa-graduation-cap"></i>
                                            <span class="hide-menu">Evaluaciones</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="sidebar-item">
                                <a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("ListarEstudiante", "Estudiante")">
                                    <i class="ti-user"></i>
                                    <span class="hide-menu">Estudiantes</span>
                                </a>
                            </li>
                           if (rol == 1)
                            {
                                <li class="sidebar-item">
                                    <a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("ListaEmpresas", "Empresa")">
                                        <i class="fas fa-building"></i>
                                        <span class="hide-menu">Empresas</span>
                                    </a>
                                </li>
                                }
                            }

                            @* Empresas para rol 2 *@
                            @if (rol == 2)
                            {
                                <li class="sidebar-item">
                                    <a href="@Url.Action("PostulacionesEstudiantes", "Practicas")" class="sidebar-link">
                                        <i class="fas fa-briefcase"></i><span class="hide-menu">Mis Postulaciones</span>
                                    </a>
                                </li>
                                <li class="sidebar-item">
                                    <a href="@Url.Action("VisualizacionPostulacion", "Practicas")" class="sidebar-link">
                                        <i class="fas fa-briefcase"></i>
                                        <span class="hide-menu">Mi Práctica</span>
                                    </a>
                                </li>
                            }

                            <!-- COMUNICACIONES -->
                            <li class="nav-small-cap">
                                <i class="mdi mdi-dots-horizontal"></i>
                                <span class="hide-menu">COMUNICACIONES</span>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("Comunicados", "Comunicados")">
                                    <i class="ti-announcement"></i>
                                    <span class="hide-menu">Comunicados</span>
                                </a>
                            </li>

                            <!-- EGRESADOS -->
                            @if (rol == 1 || rol == 3)
                            {
                                <li class="nav-small-cap">
                                    <i class="mdi mdi-dots-horizontal"></i>
                                    <span class="hide-menu">EGRESADOS</span>
                                </li>

                                if (rol == 1)
                                {
                                    <li class="sidebar-item">
                                        <a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("ListaEgresados", "Coordinador")">
                                            <i class="ti-id-badge"></i>
                                            <span class="hide-menu">Historial</span>
                                        </a>
                                    </li>
                                    <li class="sidebar-item">
                                        <a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("ListaVacanteCoordinador", "Vacante")">
                                            <i class="ti-id-badge"></i>
                                            <span class="hide-menu">Bolsa de Empleo</span>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="sidebar-item">
                                        <a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("ListaVacantesEgresado", "Vacante")">
                                            <i class="ti-id-badge"></i>
                                            <span class="hide-menu">Bolsa de Empleo</span>
                                        </a>
                                    </li>
                                }
                            }

                            <!-- ADMINISTRACIÓN -->
                            <li class="nav-small-cap">
                                <i class="mdi mdi-dots-horizontal"></i>
                                <span class="hide-menu">ADMINISTRACIÓN</span>
                            </li>
                            @if (rol == 1)
                            {
                                <li class="sidebar-item">
                                    <a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("GestionAdministracion", "AdministracionGeneral")">
                                        <i class="ti-id-badge"></i>
                                        <span class="hide-menu">Administración General</span>
                                    </a>
                                </li>
                            }

                            <li class="sidebar-item">
                                <a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("MiPerfil", "Perfil")">
                                    <i class="ti-id-badge"></i>
                                    <span class="hide-menu">Mi Perfil</span>
                                </a>
                            </li>

                            <li class="sidebar-item">
                                @if (Session["Nombre"] != null && !string.IsNullOrEmpty(Session["Nombre"].ToString()))
                                {
                                    using (Html.BeginForm("CerrarSesion", "Home", FormMethod.Post, new { id = "logoutForm", style = "display:none;" }))
                                    {
                                        @Html.AntiForgeryToken()
                                    }
                                    <a class="sidebar-link waves-effect waves-dark sidebar-link" href="#" onclick="event.preventDefault(); document.getElementById('logoutForm').submit();" aria-expanded="false">
                                        <i class="ti-power-off"></i>
                                        <span class="hide-menu">Cerrar Sesión</span>
                                    </a>
                                }
                            </li>

                        </ul>
                </nav>
            </div>
        </aside>

        <!-- Contenido principal -->
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <footer class="footer text-center">SIGEP | Todos los derechos reservados.</footer>
        </div>
    </div>

    <script src="@Url.Content("~/Scripts/jquery-3.7.0.js")"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/Scripts/app.min.js")"></script>
    <script src="@Url.Content("~/Scripts/app.init.js")"></script>
    <script src="@Url.Content("~/Scripts/app-style-switcher.js")"></script>
    <script src="@Url.Content("~/Scripts/perfect-scrollbar.jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/sparkline.js")"></script>
    <script src="@Url.Content("~/Scripts/waves.js")"></script>
    <script src="@Url.Content("~/Scripts/sidebarmenu.js")"></script>
    <script src="@Url.Content("~/Scripts/custom.min.js")"></script>
    <script src="@Url.Content("~/Scripts/script.js")"></script>

    <!-- DataTables y SweetAlert2 -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
