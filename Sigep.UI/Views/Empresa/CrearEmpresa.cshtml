@{
    ViewBag.Title = "Agregar Empresa";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="vacantes-wrapper">
    <h2 class="vacantes-titulo titulo-principal">Registrar Nueva Empresa</h2>

    <form class="formulario-vacante" method="post" action="#">
        <label for="nombreEmpresa">Nombre de la empresa <span style="color:#E04F4F">*</span></label>
        <input type="text" id="nombreEmpresa" name="nombreEmpresa" placeholder="Ejemplo: TechSolutions S.A." required />

        <label for="direccion">Dirección física <span style="color:#E04F4F">*</span></label>
        <input type="text" id="direccion" name="direccion" placeholder="Ejemplo: Avenida Central 123" required />

        <label for="nombreContacto">Nombre de la persona de contacto <span style="color:#E04F4F">*</span></label>
        <input type="text" id="nombreContacto" name="nombreContacto" placeholder="Ejemplo: Juan Pérez" required />

        <label for="correo">Correo electrónico <span style="color:#E04F4F">*</span></label>
        <input type="email" id="correo" name="correo" placeholder="ejemplo@correo.com" required />

        <label for="telefono">Número de teléfono <span style="color:#E04F4F">*</span></label>
        <input type="tel" id="telefono" name="telefono" placeholder="Ejemplo: 8888-8888" required />

        <label for="areasAfines">Áreas afines <span style="color:#E04F4F">*</span></label>
        <input type="text" id="areasAfines" name="areasAfines" placeholder="Ejemplo: Informática, Electrónica" required />

        @* Botón guardar como enlace para mantener estilo similar al formulario vacante *@
        <a href="@Url.Action("ListaEmpresas", "Empresa")" class="btn-guardar">Guardar y Registrar</a>
    </form>
</section>

<link href="~/Content/estilos/estilos.css" rel="stylesheet" />