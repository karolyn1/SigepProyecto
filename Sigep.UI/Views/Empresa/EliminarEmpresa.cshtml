@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    ViewBag.Title = "Eliminar Empresa";
}

<section class="vacantes-wrapper">
    <h2 class="vacantes-titulo titulo-principal">¿Deseas eliminar esta empresa?</h2>

    <div class="card rounded-5 p-4 mt-3">
        <p><strong>Nombre de Empresa:</strong> Empresa Demo</p>
        <p><strong>Ubicación:</strong> San José, Costa Rica</p>
        <p><strong>Especialidades que Reciben:</strong> Informática, Contabilidad</p>

        <form method="post" action="@Url.Action("EliminarEmpresa", "Empresa", new { id = 1 })">
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
            <a href="@Url.Action("ListaEmpresas", "Empresa")" class="btn btn-outline-secondary">
                Cancelar
            </a>
        </form>
    </div>
</section>